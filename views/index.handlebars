
<!-- Modal -->
<div class="modal fade" id="commentModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Comments Section</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{!-- <p class="modal-name">Name:</p> --}}
                <input type="text" class="user-name" placeholder="Name (required)">
                {{!-- <p class="modal-comment">Comment:</p> --}}
                <textarea type="text" class="user-comment" placeholder="Comment on this article."></textarea>
                <div class="container commentsWrapper">
                    <h5 class="commentsTitle">All Comments</h5>
                    <div class="row commentsHeader">
                        <div class="col-3">
                            <p>Name</p>
                        </div>
                        <div class="col-6">
                            <p>Comment</p>
                        </div>
                        <div class="col-3">
                            <p class="center">Remove</p>
                        </div>
                    </div>
                    <div class="container commentsSection">
                        <summary class="articleComments"></summary>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn modal-save">Save</button>
                <button type="button" class="btn btn-secondary modal-close" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

